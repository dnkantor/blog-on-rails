<h1> Listing all categories </h1>
<%= will_paginate %>
<% @categories.each do |category| %>
    <div class="listing">
        <div class="row">
            <div class="well col-md-4 col-md-offset-4">
                <li class="article-title user-listing">
                    <%= link_to  "#{category.name}", category_path(category) %>
                </li>
                <li style="list-style: none;"> <%= pluralize(category.articles.count, "article") %> </li>
            </div>
        </div>
    </div>
<% end %>
<%= will_paginate %>