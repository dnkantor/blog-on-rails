<h1> Create a new category </h1>

<%= render  "shared/errors", obj: @category %>

<%= form_for(@category, :html => {class: "form-horizontal", role: "form"}) do |f| %>
    <div class="form-group">
        <div class="control-label col-sm-2">
            <%= f.label :name %>
        </div>
        <div class="col-sm-8">
            <%= f.text_field :name, class: "form-control", placeholder: "Sports" %>
        </div>
    </div>

    <div class="center form-group">
        <div class="col-sm-10 col-sm-offset-1">
            <%= f.submit class: "btn btn-default btn-lg btn-xlarge" %>
        </div>
        <div class="col-sm-10 col-sm-offset-1">
            [<%= link_to  "Cancel", articles_path %>]
        </div>
    </div>
<% end %>