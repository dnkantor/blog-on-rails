<%-# Error messages -%>
<%= render  "shared/errors", obj: @article %>

<%-# Form for Article -%>
<div class="row">
    <div class="col-xs-12">
        <%= form_for(@article, :html => {class: "form-horizontal", role: "form"}) do |f| %>
            <div class="form-group">
                <div class="control-label col-sm-2">
                    <%= f.label :title %>
                </div>
                <div class="col-sm-8">
                    <%= f.text_field :title, class: "form-control", placeholder: "Enter Title Here" %>
                </div>
            </div>

            <div class="form-group">
                <div class="control-label col-sm-2">
                    <%= f.label :description %>
                </div>
                <div class="col-sm-8">
                    <%= f.text_area :description, rows: "10", class: "form-control", placeholder: "Enter Description Here" %>
                </div>
            </div>
            <div class="center form-group">
                <div class="col-sm-10 col-sm-offset-1">
                    <%= f.submit class: "btn btn-default btn-lg btn-xlarge" %>
                </div>
                <div class="col-sm-10 col-sm-offset-1">
                    [<%= link_to  "Cancel", articles_path %>]
                </div>
                
            </div>
        <% end %>
    </div>
</div>